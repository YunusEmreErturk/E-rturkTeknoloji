@using E_rturkTeknoloji.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="container pb-5">
    <div class="row">

        <div class="col-md-3">
           @Html.Action("GetCategories","Home")
        </div>

        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle" style=""></i>
                Seçili kategoride ürün bulunmamaktadır.
            </div>
            }
            else
            {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check-square"></i>
                Seçili kategoride <strong>@Model.Count() adet</strong> ürün bulunmaktadır.
            </div>
                @Html.Partial("_ProductList", Model)
            }



        </div>

    </div>

</div>
